import java.util.Random;

public class ReversaoDeArray {
    public static void main(String[] args) {
        int[] numeros = new int[10];
        Random rand = new Random();

        // Preenche o array com 10 números aleatórios
        for (int i = 0; i < 10; i++) {
            numeros[i] = rand.nextInt(100); // Números aleatórios de 0 a 99
        }

        System.out.println("Array de números aleatórios (original):");
        for (int numero : numeros) {
            System.out.print(numero + " ");
        }

        // Inverte o array
        for (int i = 0; i < numeros.length / 2; i++) {
            int temp = numeros[i];
            numeros[i] = numeros[numeros.length - 1 - i];
            numeros[numeros.length - 1 - i] = temp;
        }

        System.out.println("\nArray de números aleatórios (reverso):");
        for (int numero : numeros) {
            System.out.print(numero + " ");
        }
    }
}
